<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- HEADER MORADO -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:backgroundTint="#B88BFF"
        android:background="@drawable/heador_curves">

        <ImageView
            android:id="@+id/imgHeaderEjercicio"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_ejercicio2"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvTituloEjercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgHeaderEjercicio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Ejercicio"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubtituloEjercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTituloEjercicio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="Rutinas para ti"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- CONTENIDO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tvLabelRecomendadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendadas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <!-- Texto cuando no hay ejercicios -->
        <TextView
            android:id="@+id/tvEjerciciosVacios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No hay ejercicios recomendados aÃºn."
            android:textColor="#777777"
            android:visibility="gone" />

        <!-- Lista de ejercicios -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEjercicios"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

    </LinearLayout>

</LinearLayout>
