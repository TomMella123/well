<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/heador_curves"
        android:backgroundTint="#C62828">

        <androidx.cardview.widget.CardView
            android:id="@+id/circleCard"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="80dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivHeartAnim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_heart"
                    app:tint="#FF5252"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/tvPresionUltima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mm/Hg"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última lectura"
            android:textColor="#FFFFFF"
            android:layout_below="@id/circleCard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="14sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingreso de sistólica"
                android:textColor="#D32F2F"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSistolica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: 120"
                android:inputType="number"
                android:backgroundTint="#AAAAAA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingreso de diastólica"
                android:textColor="#D32F2F"
                android:textSize="14sp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/etDiastolica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: 80"
                android:inputType="number"
                android:backgroundTint="#AAAAAA"/>

            <Button
                android:id="@+id/btnIngresarPresion"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Ingresar"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_btn_red"
                android:backgroundTint="#D32F2F"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHistorialPresion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>