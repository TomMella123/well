<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TARJETA VERDE SUPERIOR -->
        <LinearLayout
            android:id="@+id/cardPasosTop"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1ABC9C"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivIconPasos"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_pasos"
                android:contentDescription="@string/pasos_icon_desc"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvPasosActuales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- META -->
        <TextView
            android:id="@+id/tvMetaPasos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/6000"
            android:textSize="20sp"
            android:textColor="#555555"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- BARRA PROGRESO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:background="#555555"
            android:padding="2dp">

            <View
                android:id="@+id/viewProgressPasos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#1ABC9C" />
        </LinearLayout>

        <!-- DISTANCIA / CALORIAS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distancia"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDistancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#7E57C2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CalorÃ­as"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCalorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#039BE5" />
            </LinearLayout>
        </LinearLayout>

        <!-- GRAFICO -->
        <LinearLayout
            android:id="@+id/cardGraficoPasos"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:layout_marginTop="24dp"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semanal"
                android:textStyle="bold"
                android:layout_gravity="end" />

            <View
                android:id="@+id/viewGraficoPasosPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#E0F2F1" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
