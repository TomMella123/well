<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C30000">

    <!-- HEADER ROJO -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/heador_curves"
        android:paddingLeft="24dp"
        android:paddingTop="65dp"
        android:paddingRight="24dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/tvHola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola, nombre"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHola"
            android:layout_marginTop="8dp"
            android:text="Bienvenido de vuelta"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottom_nav"
        android:backgroundTint="#F5F5F5"
        android:background="@drawable/bg_curves_bottom"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SUPERACIÃ“N -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superacion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:id="@+id/btnDesafios"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_desafios"
                    app:tint="#F4A939" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DesafÃ­os"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <!-- ðŸ‘‡ AHORA CON ID PARA EL CONTADOR -->
                    <TextView
                        android:id="@+id/tvDesafiosCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 actuales"
                        android:textColor="#777777"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- SALUD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salud"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Glucosa -->
                <LinearLayout
                    android:id="@+id/btnGlucosa"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivGlucosaDashboard"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_glucosa" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Glucosa"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvGlucosaDashboardValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00 mg/dl"
                            android:textColor="#777777" />
                    </LinearLayout>
                </LinearLayout>

                <!-- PresiÃ³n -->
                <LinearLayout
                    android:id="@+id/btnPresion"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_heart" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Presion arterial"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvPresionDashboardValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00/00 mmHg"
                            android:textColor="#777777" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- BIENESTAR -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienestar"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- HidrataciÃ³n -->
                <LinearLayout
                    android:id="@+id/btnHidratacion"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_water" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HidrataciÃ³n"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvHidratacionDashboardValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/8 vasos"
                            android:textColor="#777777" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Pasos -->
                <LinearLayout
                    android:id="@+id/btnPasos"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_pasos" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pasos"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 hoy"
                            android:textColor="#777777" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ESTILO DE VIDA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estilo de vida"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Recetas -->
                <LinearLayout
                    android:id="@+id/btnRecetas"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_recetas" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recetas"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 recomendadas"
                            android:textColor="#777777" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Ejercicio -->
                <LinearLayout
                    android:id="@+id/btnEjercicio"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg2"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ejercicio" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ejercicio"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvEjercicioResumen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sugerido"
                            android:textColor="#777777" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV CURVO -->
    <RelativeLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/heador_curves"
        android:padding="20dp">

        <ImageView
            android:id="@+id/navNotif"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_nav_alerta"
            app:tint="#FFFFFF" />

        <RelativeLayout
            android:id="@+id/navPerfil"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_white"
            android:gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_user"
                app:tint="#C30000" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/navConfig"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_nav_settings"
            app:tint="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>
