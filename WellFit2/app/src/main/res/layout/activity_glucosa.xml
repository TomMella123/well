<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Encabezado -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/heador_curves"
            android:backgroundTint="@color/glucosaHeader">

            <ImageView
                android:id="@+id/ivGlucosaIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_glucosa" />

            <TextView
                android:id="@+id/tvGlucosaUltima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00 mg/dl"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_below="@id/ivGlucosaIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tvGlucosaEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_below="@id/tvGlucosaUltima"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp" />

        </RelativeLayout>

        <!-- Nueva lectura -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingreso de glucosa"
                android:textColor="#D84343"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etNuevaGlucosa"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_bg"
                android:hint="100 mg/dl"
                android:padding="10dp"
                android:inputType="number" />

            <Button
                android:id="@+id/btnIngresarGlucosa"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:text="Ingresar"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn_red"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Historial -->
        <LinearLayout
            android:id="@+id/containerHistorialGlucosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp" />

        <!-- GrÃ¡fico semanal -->
        <LinearLayout
            android:id="@+id/layoutBarrasGlucosa"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="15dp"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>

