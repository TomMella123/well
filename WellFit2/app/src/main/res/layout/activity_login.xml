<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C30000">

    <!-- CONTENEDOR CENTRADO -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- TARJETA LOGIN -->
        <LinearLayout
            android:id="@+id/cardLogin"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login_card"
            android:orientation="vertical"
            android:padding="30dp"
            android:elevation="0dp">

            <!-- LOGO -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_logo"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvTitleLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="WellFit"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginTop="8dp" />

            <!-- TÍTULO -->
            <TextView
                android:id="@+id/tvLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio de sesión"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#000"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/tvLoginSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, feliz de volverte a ver"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <!-- CORREO -->
            <TextView
                android:text="Correo"
                android:textColor="#C30000"
                android:textSize="14sp"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:hint="Example@email.com"
                android:textSize="16sp"
                android:textColor="#000"
                android:textColorHint="#999"
                android:padding="0dp"
                android:layout_marginBottom="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD" />

            <!-- CONTRASEÑA -->
            <TextView
                android:text="Contraseña"
                android:textColor="#C30000"
                android:textSize="14sp"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:textColor="#000"
                    android:hint="•••••••••"
                    android:textSize="16sp"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/btnVerPassword"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_eye_closed"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD" />

            <!-- BOTÓN INGRESAR -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Ingresar"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_red" />

            <!-- FOOTER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="#888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btnGoRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrate"
                    android:textColor="#C30000"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
