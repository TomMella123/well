<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/heador_curves"
        android:backgroundTint="#2270ff"
        android:paddingTop="40dp">

        <ImageView
            android:id="@+id/ivCicloAgua"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/img_1"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/txtVasosActuales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="0/8"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/headerContainer"
        android:layout_marginTop="-40dp"> <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMenos"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_round"
        android:backgroundTint="#2979FF"
        android:gravity="center"
        android:layout_marginEnd="80dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMas"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_round"
            android:backgroundTint="#2979FF"
            android:gravity="center"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistorialAgua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutBotones"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:paddingBottom="20dp"/>

</RelativeLayout>